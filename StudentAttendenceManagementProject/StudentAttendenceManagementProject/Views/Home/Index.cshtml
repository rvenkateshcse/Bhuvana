<!DOCTYPE html>
@{
    ViewBag.Title = "Login";
}
<div id="form">

    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <style media="all">
            .form_table {
                text-align: center
            }

            body {
                height: 100;
                margin: 0;
                opacity: 0.5;
                background-image: url('Image/micah-williams-lmFJOx7hPc4-unsplash.jpg');
                background-repeat: no-repeat;
                background-size: 100% 100%;
                background-attachment: fixed;
                background-position: center;
            }
        </style>
      
        <td>UserName:</td>
        <td>
            <input type="text" name="Un" required='true' />
        </td>
        <br />
        <br />
        <br />
        <br />
        <td>Password:</td>
        <td>
            <input type="text" name="Pwd" required='true' />
        </td>
        <br />
        <br />
        <br />
        <br />
        <td>Role:</td>
        <td>
            <input type="text" name="Rol" required='true' />
        </td>
        <br />
        <br />
        <br />
        <br />
        <input type="submit" value="Login" />
        @Html.ActionLink("Register", "Register", "Registration")
        <br />
        <br />
        <br />
        <br />
        
       
    }

</div>